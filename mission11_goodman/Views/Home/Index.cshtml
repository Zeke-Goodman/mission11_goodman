@{
    ViewData["Title"] = "Home Page";
}
@model BookListViewModel

<div class="container">
   
    @foreach (Book b in Model.Books)
    {
        <div class="row justify-content-center">
            <div class="col-4">
                <div class="card">
                    <h4 class="card-header">@b.Title</h4>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li>Author: @b.Author</li>
                            <li>Publisher: @b.Publisher</li>
                            <li>ISBN: @b.Isbn</li>
                            <li>Classification/Category: @b.Classification</li>
                            <li>Number of Pages: @b.PageCount</li>
                            <li>Price: @b.Price</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div page-model="@Model.Pagination" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary"></div>

